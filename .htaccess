SetEnv APPLICATION_ENV development 

Options +FollowSymlinks
RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !index.php
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ http://www.helpdesk.it/$1/ [L,R=301] 

RewriteCond %{REQUEST_URI} !(category|post)
RewriteRule ^(.*?)/(.*)$ index.php?request=$1&params=$2 [NC,L]

RewriteCond %{REQUEST_URI} /category/(.*)[\/]?
RewriteRule ^category/(.*)/$ index.php?sort=$1 [NC]

RewriteCond %{REQUEST_URI} /post/(.*)[\/]?
RewriteRule ^post/((.*)[-]?(.*))/$ index.php?single=$1 [NC]

RewriteRule ^([Ll]ogin|[Rr]egister)/$ index.php?action=$1 [NC]


